<br />
<div class="row">
  <div class="large-12 small-12" align="center">

 <div class="panel" style="width: 350px">

<h2>Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <div style="width:300px">
      <%= f.label :Username %><br />
      <%= f.text_field :logon, autofocus: true %>
    </div>
  </div>

  <div class="field">
    <div style="width:300px">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
      </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :class => "button radius" %>
  </div>

  <div class="field">
    <%= link_to 'Forgot password?', '/disclaimers/contact_us/' %>
  </div>
<% end %>


</table>

</div>
