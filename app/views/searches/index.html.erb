<br /><br />
<div class="row panel radius">
  <div class="small-12 medium-12 large-12 column">
    <div align="center">
      <h1>Advanced Search</h1>
    </div><hr /><br />
    <%= search_form_for @q, url: search_searches_path, html: { method: :post } do |f| %>
      <%= f.condition_fields do |c| %>
        <%= render "condition_fields", f: c %>
      <% end %>
      <%= link_to_add_fields "+", f, :condition, class: "button radius" %>
      &emsp;
      <%= f.submit "Search", :class => "button radius" %>
    <% end %>
    <% if @display_results %>
      <%= render "results" %>
      <%= render partial: 'searches/form_new_saved_list' %>
    <% end %>
  </div>
</div>
