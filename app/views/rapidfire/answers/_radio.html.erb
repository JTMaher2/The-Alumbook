<%= render partial: "rapidfire/answers/errors", locals: {answer: answer} %>

<div class="row">
  <div class="large-6 medium-6 small-12 large-centered medium-centered small-centered columns">
    <%= f.label :answer_text, answer.question.question_text %><br />
    <%- answer.question.options.each do |option| %>
      <%= f.label "answer_text_#{option}", option do %>
        <%= f.radio_button :answer_text, option %>
        <%= option %>
      <% end %>
    <% end %>
  </div>
</div>
<br />
