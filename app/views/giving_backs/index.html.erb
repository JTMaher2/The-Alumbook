<br /><br />
<div class="row panel radius">
  <div class="large-12 medium-8 columns">
    <div class="row">
      <div class="large-12 medium-12 small-12 large-centered small-centered medium-centered columns">
        <div align="center">
          <h1>Giving Back</h1>
        </div>
      </div>
    </div>
    <hr />
    <div class="row">
      <div class="large-12 medium-12 small-12 columns">
        <div align="right">
          <%= link_to 'Give Back', main_app.new_giving_back_path, class: "button radius success" %>
        </div>
      </div>
    </div>
    <table>
      <thead>
        <tr>
          <th>Subject</th>
          <th>Position</th>
          <th>Description</th>
          <th>Requirements</th>
          <th>Approved</th>
          <th>Completed</th>
          <th>Giving back type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @giving_backs.each do |giving_back| %>
          <% if current_login.login_type != 2  or current_login.user.id == giving_back.user_id%>
            <tr>
              <td><%= giving_back.subject %></td>
              <td><%= giving_back.position %></td>
              <td><%= giving_back.description %></td>
              <td><%= giving_back.requirements %></td>
              <td><%= giving_back.approved %></td>
              <td><%= giving_back.completed %></td>
              <td><% if giving_back.giving_back_type.to_i == 0 %>
                Internship
              <%elsif giving_back.giving_back_type.to_i == 1 %>
                Mentoring
              <%elsif giving_back.giving_back_type.to_i == 2 %>
                Guest Speaking
              <%else%>
                Other
              <% end %></td>
              <td><%= link_to 'Show',giving_back_path(giving_back),class: "small radius button" %></td>
              <td>  <%= link_to 'Delete', giving_back, method: :delete, data: { confirm: 'Are you sure?' },class: "small radius button" %></td>
            <% end %>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
