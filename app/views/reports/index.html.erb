<% content_for :title, "Alumbook | Reports" %>

<br /><br />
<div class="row panel radius">
  <div class="large-6 large-centered column">
    <div class="row">
      <div class="large-12 small-12 small-centered large-centered columns">
        <h1 align="center">Reports</h1>
      </div>
    </div>
    <hr /><br />
    <div class="row">
      <div class="large-6 large-centered small-12 columns">
        <%= form_tag "reports/options", :html=>{:id=>'report_form'}, method: "post" do %>
        <%= select_tag(:report_type, options_for_select([["-- Choose Report --", ""], ["Date Entered", 'date'], ["Graduating Class", 'grad_class'], ["Graduate Program", 'grad_program'], ["User Employer", 'employer'], ["Given Back", 'given_back']]))%>
        <br /><br />
        <div align="center">
          <%= submit_tag "Submit", class: "button radius" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
